<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".owner.activities.SalonDetails">

    <Button
        android:id="@+id/buttonAddService"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="650dp"
        android:text="@string/add_service"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="581dp" />

    <Button
        android:id="@+id/buttonViewServices"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="650dp"
        android:text="@string/view_services"
        tools:layout_editor_absoluteX="231dp"
        tools:layout_editor_absoluteY="581dp" />

    <Button
        android:id="@+id/buttonAddEmployee"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginTop="650dp"
        android:text="@string/add_employee"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="581dp" />


    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="619dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/detalii_despre_salonul_ales"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/twNameSalon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/salonName"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewSalon"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/image" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/salonCounty"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/twSalonCounty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="3"
                    android:text="@string/salonCounty"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/salonCity"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/twSalonCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="3"
                    android:text="@string/salonCity"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/salonStreet"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/twSalonStreet"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="3"
                    android:text="@string/salonStreet"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="389dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/salonPostalCode"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/twPostalCode"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:text="@string/salonPostalCode"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/phoneNumber"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/twPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:text="@string/phoneNumber"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/twEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:text="@string/email"
                android:textSize="16sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/salonDescription"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/twDescription"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/salonDescription"
                android:textSize="16sp" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>