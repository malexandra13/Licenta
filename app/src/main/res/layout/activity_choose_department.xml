<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.appoiment.ChooseDepartmentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="651dp"
        android:gravity="center"
        android:text="@string/choose_your_service"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/nails"
        android:layout_width="145dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="270dp"
        android:background="@color/lavender_bright"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@drawable/unghie" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/nails"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hairstyle"
        android:layout_width="145dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="460dp"
        android:background="@color/lavender_bright"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@drawable/feon" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hairstyle"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/makeup"
        android:layout_width="145dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="460dp"
        android:background="@color/lavender_bright"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@drawable/machiajj" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/make_up"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/eyebrow"
        android:layout_width="145dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="270dp"
        android:background="@color/lavender_bright"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@drawable/sprancene" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/eyebrow"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hairRemoval"
        android:layout_width="145dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="80dp"
        android:background="@color/lavender_bright"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@drawable/epilare" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hair_removal"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/facialTreatments"
        android:layout_width="145dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="80dp"
        android:background="@color/lavender_bright"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:layout_margin="10dp"
            android:src="@drawable/tratfaciale" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/facialTreatments"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>